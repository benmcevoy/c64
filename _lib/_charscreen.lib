#importonce
#import "_prelude.lib"
#import "_math.lib"

.namespace CharScreen {
    Character: .byte 204
    PenColor: .byte GREEN

    /* @Call

    */
    WriteStringBig: {
        .var x = __arg0
        .var y = __arg1
        .var textL = __arg2
        .var textH = __arg3
        .var message = __ptr1

        Set message:textL
        Set message+1:textH
        
        Push CharScreen.Character
        Set charPtr:#0
        Set xStart:x
        Set yStart:y

            nextChar:
                ldy charPtr
                lda (message),y
                cmp #ACTION_HANDLED
                bne !+
                    jmp exit
                !:

                // at this point you have a screen code in the accumulator, between 0..255
                // you need to multiply by 8 and add to $d000
                sta __tmp3
                Mul16 #8:__tmp3
                Add16 __val0:__val1:#$00:#$d0
                
                // bit of meta programming
                lda __val0
                sta inject+1
                lda __val1
                sta inject+2

                ldy #0
                Set y:yStart

                nextByteInChar:
                    Set x:xStart
                    // make char rom visible  
                    lda 1
                    and #251
                    sta 1
                    inject:
                    lda $d000,Y
                    sta byteLine
                    // restore char rom
                    lda 1
                    ora #4
                    sta 1                    

                    ldx #0
                    
                    plot:
                        lda byteLine
                        // shift msb into carry
                        asl
                        sta byteLine
                        // test carry
                        bcc !+
                            Call CharScreen.PlotH:x:y
                        !:

                        inc x
                        inx 
                        cpx #8
                        bne plot

                    inc y
                    iny
                    cpy #8
                    bne nextByteInChar
                

                lda xStart
                clc
                adc #8
                sta xStart
                cmp #80
                bne !+
                    // off the screen
                    jmp exit
                !:
                
                inc charPtr
                jmp nextChar

        exit:
            Pop CharScreen.Character

        rts
        charPtr: .byte 0
        byteLine: .byte 0
        xStart: .byte 0
        yStart: .byte 0
    }

