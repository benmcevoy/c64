#importonce
#import "_prelude.lib"

.label ChrOut = $FFD2

/* Print a value to the screen as hex, using the kernal chrout */
.pseudocommand DebugPrint value {

    .if(value.getType() == AT_NONE) {     sta __tmp3 }

    // try not to clobber anything, shove it all on the stack
    php
    pha;txa;pha;tya;pha

    Push __tmp3
    Push __tmp2
    Push __tmp1
    Push __tmp0

    .if(value.getType() != AT_NONE) { lda value;sta __tmp3 }

    ldy #0

    // top 4 bits
    lda __tmp3
    lsr;lsr;lsr;lsr
    __toHex()
    jsr ChrOut

    lda __tmp3
    and #$0f
    __toHex()
    jsr ChrOut

    // space
    lda #32
    jsr ChrOut
    
    Pop __tmp0
    Pop __tmp1
    Pop __tmp2
    Pop __tmp3

    pla;tay;pla;tax;pla
    plp
    

}    

.macro __toHex(){
    cmp #$A
    beq !+
    bcs !+
        clc
        // 48 = 0 in petscii
        adc #48
        jmp exit
    !:
    clc
    // 65 is A  
    adc #55
    exit:
}
