#importonce
#import "_prelude.lib"

.namespace Joystick {

    .label PORT2 = $dc00

    .label UP      = %00000001
    .label DOWN    = %00000010
    .label LEFT    = %00000100
    .label RIGHT   = %00001000
    .label FIRE    = %00010000
    // TODO: FIRE_SHORT, FIRE_MEDIUM, FIRE_LONG, using that latching idea
    // what other actions? at least add s-m-l to all these actions, thats 15 discrete states potentially, a nice nibble
    // or just short/long 50:50, or indeed make that distribution configureable
    // 100 50:50  25:50:25 30:70 etc can support 4 args as input
    // DOUBLE_FIRE, DOUBLE_LEFT, etc
    // refer awesome smash sibilings


    Read: {
        .var playerAction = __arg0

        Set playerAction:#0

        // left
        lda #LEFT
        bit PORT2
        bne !+
            SetBit playerAction:#LEFT
        !:

        lda #RIGHT
        bit PORT2
        bne !+
            SetBit playerAction:#RIGHT
        !:

        // up
        lda #UP
        bit PORT2
        bne !+
            SetBit playerAction:#UP
        !:

        // down
        lda #DOWN
        bit PORT2
        bne !+
            SetBit playerAction:#DOWN
        !:

        // fire
        lda #FIRE
        bit PORT2
        bne !+
            SetBit playerAction:#FIRE
        !:

        Set __val0:playerAction

        rts
    }
}